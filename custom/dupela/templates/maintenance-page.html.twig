{#
/**
 * @file
 * Theme override to display a single Drupal page while offline.
 *
 * All available variables are mirrored in page.html.twig.
 * Some may be blank but they are provided for consistency.
 *
 * @see template_preprocess_maintenance_page()
 */
#}
    <div class="content-area mx-auto text-center p-2 color-lighten text-color-white">
        <div class="text-3 font-weight-bold inset-2">
            {% if site_name or site_slogan %}
                {% if site_name %}
                    <a href="{{ front_page }}" title="{{ 'Home'|t }}" rel="home">{{ site_name }}</a>
                {% endif %}
            {% endif %}
        </div>
        <div class="text-3 font-weight-bold inset-2">
            {% if title %}
                {{ title }}
            {% endif %}
        </div>
       
        <div class="error-description inset text-6 inset-1">
                {% if page.content %}
                    {{ page.content }}
                {% endif %}
           
        </div>
    <div class="seperator">
        <a href="#" class="btn btn-primary"> More info >>></a>
    </div>

</div>
    {# footer #}
<footer class="dark-footer">
    <div class="footer content-area container">
        <div class="footer-minimal text-center">
            <div class="footer-company-name pt-4 text-4 font-weight-bold text-color-light">
                {% if site_name %}
                {{ site_name }}
                {% endif %}
            </div>
            <div class="footer-message pb-4">
                    {% if site_slogan %}
                        {{ site_slogan }}
                    {% endif %}
            </div>
            <div class="footer-social pt-4 pb-4 a-light">
                {{ dupela_icon_navigation_minimal }}
            </div>
            <div class="footer-copyright pb-4 pt-4 caption">
                Â© 2020 All Rights Reserved
            </div>
        </div>
    </div>
</footer>
 
